# Database
DATABASE_URL="postgresql://user:password@localhost:5432/aforsev_db?schema=public"

# Authentication
JWT_SECRET="your_jwt_secret_key_here_min_32_chars"
JWT_REFRESH_SECRET="your_refresh_secret_key_here_min_32_chars"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
BCRYPT_SALT_ROUNDS="12"

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN="your_facebook_whatsapp_access_token"
WHATSAPP_VERIFY_TOKEN="your_webhook_verification_token"
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"
WHATSAPP_BUSINESS_ACCOUNT_ID="your_business_account_id"

# Stripe Payments (Optional for MVP)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (Optional for MVP)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="sendgrid_api_key"
FROM_EMAIL="noreply@aforsev.com"

# Application
NODE_ENV="development"
PORT="3000"
CORS_ORIGIN="http://localhost:5173"
SESSION_SECRET="your_session_secret_here_min_32_chars"

# Redis (Optional for caching)
REDIS_URL="redis://localhost:6379"

# Frontend URL
FRONTEND_URL="http://localhost:5173"

# Logging
LOG_LEVEL="info"